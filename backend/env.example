# ========== CONFIGURATION DE BASE ==========

# Port du serveur
PORT=3000

# JWT Secret (CHANGER EN PRODUCTION)
JWT_SECRET=votre_secret_jwt_tres_securise_changez_en_production
JWT_REFRESH_SECRET=votre_refresh_secret_jwt_tres_securise

# ========== BASE DE DONNÉES ==========

# SQLite (par défaut)
DB_PATH=./data/made.db

# ========== IA / ML ==========

# Google Gemini API
GEMINI_API_KEY=votre_gemini_api_key

# Google Vision API (pour OCR)
GOOGLE_VISION_API_KEY=votre_google_vision_api_key

# AWS Rekognition (optionnel)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=votre_aws_access_key
AWS_SECRET_ACCESS_KEY=votre_aws_secret_key

# TensorFlow.js Model Path (optionnel)
MODEL_PATH=./models/model.json
ML_ANALYSIS_PROVIDER=sharp

# ========== STOCKAGE ==========

# AWS S3 (optionnel)
S3_BUCKET_NAME=votre_bucket_name
S3_REGION=us-east-1

# MinIO (optionnel, alternative S3)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=votre_minio_access_key
MINIO_SECRET_KEY=votre_minio_secret_key

# ========== NOTIFICATIONS MULTICANAUX ==========

# Twilio (SMS et WhatsApp)
TWILIO_ACCOUNT_SID=votre_account_sid_twilio
TWILIO_AUTH_TOKEN=votre_auth_token_twilio
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# WhatsApp Business API (Meta) - Alternative
WHATSAPP_ACCESS_TOKEN=votre_access_token_meta
WHATSAPP_PHONE_NUMBER_ID=votre_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=votre_business_account_id

# Email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre_email@gmail.com
SMTP_PASSWORD=votre_mot_de_passe_app
SMTP_FROM=noreply@healther.com

# Firebase Cloud Messaging (Push)
FCM_SERVER_KEY=votre_fcm_server_key

# ========== MÉDICATIONS ==========

# OpenFDA et RxNorm sont GRATUITS, pas d'API key nécessaire

# DrugBank (optionnel)
DRUGBANK_API_KEY=votre_drugbank_key

# ========== FHIR / HL7 ==========

# FHIR Server Endpoint (optionnel)
FHIR_SERVER_URL=https://fhir.example.com/fhir

# ========== INTÉGRATION SYSTÈMES NATIONAUX ==========

# OpenMRS (optionnel)
OPENMRS_URL=https://openmrs.example.com/openmrs
OPENMRS_USERNAME=admin
OPENMRS_PASSWORD=Admin123

# DHIS2 (optionnel)
DHIS2_URL=https://dhis2.example.com/api
DHIS2_USERNAME=admin
DHIS2_PASSWORD=district

# ========== SÉCURITÉ ==========

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:8080,http://localhost:3000

# ========== MONITORING ==========

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# ========== LOGGING ==========

# Niveau de log (debug, info, warn, error)
LOG_LEVEL=info

# ========== DÉVELOPPEMENT ==========

# Mode développement
NODE_ENV=development

# Hot-reload avec nodemon
NODEMON_ENABLED=true
